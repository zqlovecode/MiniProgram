.works{
  background:#f1f1f1;
  padding:70rpx 0 70rpx;
}

.wkMain{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.wkMain .box{
  width:336rpx;
  height:370rpx;
  margin-bottom:28rpx;
  background:#fff;
}

.wkMain .box image{
   width:100%;
}

.des{
  padding: 0 24rpx;
  margin-top:10rpx;
  position: relative;
}
.des .proName{
  font-size:24rpx;
}

.des .price{
  color:#b20602;
  font-size:36rpx;
  margin-top:10rpx;
}

.des .price text{
  font-size:24rpx;
}

.des .btn{
  width:40rpx;
  height:40rpx;
  background:#b20602;
  color:#fff;
  text-align: center;
  line-height:37rpx;
  position: absolute;
  right:24rpx;
  bottom:12rpx;
  border-radius: 50%;
  font-size:32rpx;
}


.btnCon{
  display: flex;
  justify-content: space-between;
}
.ltbtn{
  flex:2;
  background:#5d5d5d;
}

.rgbtn{
  flex:1;
  background:#b20602;
