/* 春茶套装模块 */



.works{
  background:#f1f1f1;
  padding:90rpx 0 70rpx;
}

.wkMain{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.wkMain .box{
  width:336rpx;
  height:370rpx;
  margin-bottom:28rpx;
  background:#fff;
}

.wkMain .box image{
   width:100%;
}

.des{
  padding: 0 24rpx;
  margin-top:10rpx;
  position: relative;
}
.des .proName{
  font-size:24rpx;
}

.des .price{
  color:#b20602;
  font-size:36rpx;
  margin-top:10rpx;
}

.des .price text{
  font-size:24rpx;
}

.des .btn{
  width:40rpx;
  height:40rpx;
  background:#b20602;
  color:#fff;
  text-align: center;
  line-height:37rpx;
  position: absolute;
  right:24rpx;
  bottom:12rpx;
  border-radius: 50%;
  font-size:32rpx;
}

.reTop{
  padding-top:0rpx;
}

.wkMain .box.wh{
  height:555rpx;
}

.footer{
  padding-bottom:50rpx;
  background:#f1f1f1;
  text-align: center;
}

.footer image{
  height:70rpx;
}

.footer .text{
  font-size:24rpx;
  color:#999;
}